<UserControl
  x:Class="KeywordManager.UserControls.AcceptCancelDlg"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:KeywordManager.UserControls"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid x:Name="dlgHostMain" Style="{DynamicResource DialogHostGrid}">
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <TextBox
      x:Name="edtDlgHostText"
      md:HintAssist.Hint="Value"
      Style="{StaticResource DialogHostEdt}" Margin="0,3,0,2" />

    <StackPanel Style="{StaticResource DialogHostPnl}">
      <Button Style="{StaticResource DialogHostOk}" />
      <Button Style="{StaticResource DialogHostCancel}" />
    </StackPanel>
  </Grid>
</UserControl>
